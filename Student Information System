#include <iostream>
#include <string>
using namespace std;



// struct to create a user defined data type to store different data types (student data)

struct Riyan {

    int serial_No;
    string name;
    float marks;
    float total_marks;
};

int main() { 
    int n;
    cout<<"--------------------------------------------------\n";
    cout<<"Enter the Number of Students data u want to store"<<endl;
    cout<<"---------------------------------------------------\n";
    cout<<"\n";
    cout<<"Enter the Number: ";
    cin >> n;
    cout<<"\n";
    Riyan student[n];    // declaring a variable for struct Riyan and forming an array


// taking input from the user for struct Riyan with the help of loop and storing it in arr (Riyan student)

    for (int i = 0; i < n; i++) {
        
        cout << "Enter the serial number: "; 
        cin >> student[i].serial_No;
        cout << "Enter the name: ";
        cin >> student[i].name;
        cout << "Enter the marks: ";
        cin >> student[i].marks;
        cout << "Enter the total marks: ";
        cin >> student[i].total_marks;
        cout<<"\n";
        
    }
    cout<<"These are the Results\n";
    cout<<"\n";
    for (int i = 0; i < n; i++) {
        cout<<"----------------------------\n";
        cout<<"serial_No: "<<student[i].serial_No<<endl;
        cout<<"Name: "<<student[i].name<<endl;
        cout<<"marks:"<<student[i].marks<<endl;
        cout<<"total_marks: "<<student[i].total_marks<<endl;
        cout<<"------------------------------\n";
        cout<<"\n";
    }





}
