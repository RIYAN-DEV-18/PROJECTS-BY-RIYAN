#include <iostream>
#include <string>
using namespace std;




struct book{
    string title;
    string author;  
    int price;

};


int main () {
    int n;
    cout<<"--------------------------------------------------\n";
    cout<<"Enter the Number of Books u want to store"<<endl;
    cout<<"---------------------------------------------------\n";
    cout<<"\n";
    cout<<"Enter the Number: ";
    cin >> n;

    book books[n];
    cout<<"\n";
    for (int i = 0; i < n; i++){
        cout<<"Enter the title of book "<<i+1<<": ";
        cin>> books[i].title;
        cin.ignore(); // to ignore the newline character left in the input buffer
        cout<<"Enter the author of book "<<i+1<<": ";   
        cin>> books[i].author;
        cin.ignore(); // to ignore the newline character left in the input buffer
        cout<<"Enter the price of book "<<i+1<<": ";
        cin>> books[i].price;
        cin.ignore(); // to ignore the newline character left in the input buffer
        cout<<"\n";

    }

    cout<<"These are the Books\n";
    cout<<"\n";
    cout<<"---------------------------------------------------------------------------------------------------------\n";
            cout<<"Title\t           |          Author\t            |         Price\t\n";
        cout<<"---------------------------------------------------------------------------------------------------------\n";
        cout<<"\n";

    for (int i = 0; i < n; i++){

        cout<<books[i].title<<"\t           |          "<<books[i].author<<"\t            |         "<<books[i].price<<"\n";
        cout<<"---------------------------------------------------------------------------------------------------------\n";
        cout<<"\n";
    }

    string authorToDelete;
    cout<<"Enter the author name to delete their book: ";
    cin>>authorToDelete;
    cout<<"\n";

    for (int i = 0; i < n; i++){
        if (books[i].author == authorToDelete){
            
            for (int j = i; j < n-1; j++){
                books[j] = books[j+1]; 
            }
        }
    }

    cout<<"These are the Books after deleting the book of author "<<authorToDelete<<"\n";
    cout<<"\n";
    cout<<"---------------------------------------------------------------------------------------------------------\n";
            cout<<"Title\t           |          Author\t            |         Price\t\n";
        cout<<"---------------------------------------------------------------------------------------------------------\n";
        cout<<"\n";
    for (int i = 0; i < n-1; i++){
        cout<<books[i].title<<"\t           |          "<<books[i].author<<"\t            |         "<<books[i].price<<"\n";
        cout<<"---------------------------------------------------------------------------------------------------------\n";
        cout<<"\n";
    }

}

